<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="01" author="chriniko13">

        <createTable tableName="crimes_tbl" remarks="A table to contain all crime records">

            <column name="id" type="int" autoIncrement="true">
                <constraints nullable="false" unique="true" primaryKey="true"/>
            </column>

            <column name="cdatetime" type="varchar(255)">
                <constraints nullable="false" unique="false"/>
            </column>

            <column name="address" type="varchar(255)">
                <constraints nullable="false" unique="false"/>
            </column>

            <column name="district" type="varchar(255)">
                <constraints nullable="false" unique="false"/>
            </column>

            <column name="beat" type="varchar(255)">
                <constraints nullable="false" unique="false"/>
            </column>

            <column name="grid" type="varchar(255)">
                <constraints nullable="false" unique="false"/>
            </column>

            <column name="crimedescr" type="varchar(255)">
                <constraints nullable="false" unique="false"/>
            </column>

            <column name="ucr_ncic_code" type="varchar(255)">
                <constraints nullable="false" unique="false"/>
            </column>

            <column name="latitude" type="varchar(255)">
                <constraints nullable="false" unique="false"/>
            </column>

            <column name="longitude" type="varchar(255)">
                <constraints nullable="false" unique="false"/>
            </column>

        </createTable>

    </changeSet>

</databaseChangeLog>